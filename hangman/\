/* /1*    â–ˆâ–„â–„â–ˆ â–ˆâ–€â–€â–„ â–ˆâ”€â”€ â–ˆâ”€â”€â–ˆ *1/ */ 
/* â–€â”€â”€â–€ â–€â–€â–€â”€ â–€â–€â–€ â–€â–€â–€â”€ */
int hangman(int stage) {

	printf("head\n");
	printf("\t ______\n");
	printf("\t/      \\\n");
	printf("\t \\____/\n");
	if (stage == 1) {
		return 1;
	}
	printf("\t   |\n");
	
	if (stage > 2) {
		printf("\t / |\n");
		printf("\t/  |\n");
	}else{
		printf("\t   |\n");
		printf("\t   |\n");
		return 2;
	}
		if (stage == 2) {
		return 2;
	}
	printf("left hand");
	if(stage == 3) {
		return 3;
	}
	printf("right hand");
	if(stage == 5) {
		return 5;
	}

	printf("left left");
	if(stage == 6) {
		return 6;
	}

	printf("right leg");
	if(stage == 7) {
		return 7;
	}
	
	printf("Hanger");
	if(stage == 8) {
		return 8;
	}

}



